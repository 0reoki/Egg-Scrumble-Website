<%- include('partials/head'); -%>

    <div id="wrapper">
        <div style="min-height: inherit;" class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-12 container-fluid p-5">
            <section id="content-container-login">
                <div class="row">
                    <h3 class="title mx-auto pb-4"> SIGN UP </h3>
                </div>

                <form>
                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputEmail1">First Name*</label>
                        <input type="text" class="form-control" id="exampleInputFirstNameID"
                            placeholder="Example: Joseph">
                        <p id="FirstNameRequired"></p>
                    </div>

                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputEmail1">Last Name*</label>
                        <input type="text" class="form-control" id="exampleInputLastNameID"
                            placeholder="Example: Arias">
                        <p id="LastNameRequired"></p>
                    </div>

                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputEmail1">Email Address*</label>
                        <input type="text" class="form-control" id="exampleInputEmail"
                            placeholder="Example: animelover64@yahoo.com" required>
                        <p id="EmailRequired"></p>
                    </div>

                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputEmail1">Password*</label>
                        <input type="password" class="form-control" id="exampleInputPassword" placeholder="Password"
                            required>
                        <p id="PasswordRequired"></p>
                    </div>

                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputPassword1">Re-enter Password*</label>
                        <input type="password" class="form-control" id="exampleInputPasswordRe"
                            placeholder=" Re-enter Password">
                        <p id="RePasswordRequired"></p>
                    </div>

                    <div class="form-group p-2">
                        <button onclick=SignUpSubmit() type="button" class="btn-xl btn-info">Sign Up</button>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <p class="mx-auto">Already have an account? <a href="/login"
                                    style="font-weight: 500;">Log In</a></p>
                        </div>
                    </div>

                </form>
            </section>
        </div>

<%- include('partials/footer'); -%>