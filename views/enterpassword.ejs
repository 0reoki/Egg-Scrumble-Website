<%- include('partials/head'); -%>

    <div id="wrapper">
        <div style="min-height: inherit;" class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-12 container-fluid p-5">
            <section id="content-container-login">
                <div class="row">
                    <h3 class="title mx-auto pb-4"> ENTER NEW PASSWORD </h3>
                </div>

                <div class="row">
                    <p class="text-center">
                        You are verified as the owner of this account (insert email here). Please type your new password.
                    </p>
                </div>

                <form>
                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputPassword">Your New Password</label>
                        <input type="password" class="form-control" id="verificationCodeID" placeholder="Password">
                    </div>
                    
                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputRePassword">Confirm New Password</label>
                        <input type="password" class="form-control" id="verificationCodeID2" placeholder="Password">
                    </div>
                    <div id="RePasswordRequired"></div>
                    <div class="form-group p-2">
                        <button onclick="ConfirmResetPassword()" type="button" class="btn-xl btn-secondary">Change Password</button>
                    </div>

                    <!-- insert alert if change password is success -->

                    <div class="form-group">
                        <div class="row">
                            <p class="mx-auto"><a href="/login" style="font-weight: 500;">Log In</a></p>
                        </div>
                        <div class="row">
                            <p class="mx-auto"><a href="/signup" style="font-weight: 500;">Sign Up</a></p>
                        </div>
                        <div class="row">
                            <p class="mx-auto"><a href="/index" style="font-weight: 500;">Back to Homepage</a></p>
                        </div>
                    </div>

                </form>
            </section>
        </div>

        <%- include('partials/footer'); -%>
