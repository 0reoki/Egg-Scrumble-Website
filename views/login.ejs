<%- include('partials/head'); -%>

    <div id="wrapper">
        <div style="min-height: inherit;" class="col-lg-8 col-md-8 col-sm-12 col-xs-12 col-12 container-fluid p-5">
            <section id="content-container-login">
                <div class="row">
                    <h3 class="title mx-auto pb-4"> LOGIN </h3>
                </div>

                <form>
                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputEmail1">Email Address</label>
                        <input type="text" class="form-control" id="exampleInputLoginID"
                            placeholder="Example: animelover64@yahoo.com">
                    </div>

                    <div class="form-group pl-2 pr-2">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword" placeholder="Password">
                    </div>

                    <div id="error"> </div>

                    <div class="form-group p-2">
                        <button onclick=LoginValidation() type="button" class="btn-xl btn-secondary">LOGIN</button>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <p class="mx-auto">Don't have an account? <a href="/signup"
                                    style="font-weight: 500;">Sign Up</a></p>
                        </div>
                        <div class="row">
                            <p class="mx-auto"><a href="/forgotpass" style="font-weight: 500;">Forgot your
                                    password?</a></p>
                        </div>
                    </div>

                </form>
            </section>
        </div>
        
<%- include('partials/footer'); -%>